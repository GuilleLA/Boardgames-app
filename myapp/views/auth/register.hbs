<div class="container mt-5">
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-12 col-md-4">
      <form action="/register" method="POST">
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-user"></i></div>
            </div>
            <input type="text" name="username" class="form-control {{#if errors.username}} is-invalid {{/if}}" placeholder="Username"/>
            <div class="invalid-feedback">
              {{ errors.username }}
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-envelope"></i></div>
            </div>
            <input type="text" name="email" class="form-control {{#if errors.email}} is-invalid {{/if}}" placeholder="Email"/>
            <div class="invalid-feedback">
              {{ errors.email }}
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-lock"></i></div>
            </div>
            <input type="password" name="password" class="form-control {{#if errors.password}} is-invalid {{/if}}" placeholder="Password" />
            <div class="invalid-feedback">
              {{ errors.password }}
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-universal-access"></i></div>
            </div>
            <input type="number" name="age" class="form-control {{#if errors.age}} is-invalid {{/if}}" placeholder="Age"/>
            <div class="invalid-feedback">
              {{ errors.age }}
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fa fa-map-marker"></i></div>
            </div>
            <input type="text" name="city" class="form-control {{#if errors.city}} is-invalid {{/if}}" placeholder="City"/>
            <div class="invalid-feedback">
              {{ errors.city }}
            </div>
          </div>
          <div class="input-group mb-2">
            <input type="text" class="form-control {{#if errors.latitude }}is-invalid{{/if}}" name="latitude" value="{{user.latitude}}"
            placeholder="Enter user latitude" id="lat">
            <div class="invalid-feedback">
              {{errors.latitude}}
            </div>
          </div>
            <div class="input-group mb-2">
            <input type="text" class="form-control {{#if errors.longitude }}is-invalid{{/if}}" name="longitude"
            value="{{user.longitude}}" placeholder="Enter user longitude" id="lng">
            <div class="invalid-feedback">
              {{errors.longitude}}
            </div>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
        <div class="form-actions mt-2">
          <a href="https://www.latlong.net/" class="btn btn-info btn-block" target="_blank">Find your coordinates</a>
        </div>
      </form>
      <hr>
      <p class="text-center">Already registered? <a href="/login">Do login</a></p>
    </div>
  </div>
</div>