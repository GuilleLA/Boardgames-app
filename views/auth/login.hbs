<div class="container mt-5">
  <div class="row justify-content-md-center">
    <div class="col-xs-12 col-sm-12 col-md-4 auth-margin">
      <form action="/login" method="POST">
        <div class="form-group">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-user"></i></div>
            </div>
            <input type="text" name="username" class="form-control {{#if errors}} is-invalid {{/if}}" placeholder="Username"/>
            <div class="invalid-feedback">
              {{ errors.password }}
            </div>
          </div>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-lock"></i></div>
            </div>
            <input type="password" name="password" class="form-control {{#if errors}} is-invalid {{/if}}" placeholder="Password" />
            <div class="invalid-feedback">
              {{ errors.password }}
            </div>
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
        <div class="form-actions mt-3">
          <a href="/authenticate/google" class="btn btn-block btn-danger"><i class="fab fa-google"></i> Login with Google</a>
        </div>
      </form>
      <hr>
      <p class="text-center">Not registered? <a href="/register">Do register</a></p>
    </div>
  </div>
</div>